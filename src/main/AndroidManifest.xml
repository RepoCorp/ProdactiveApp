<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.com.zeitgeist.prodactiveapp"
    android:versionCode="1"
    android:versionName="1.2">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <activity
            android:name=".activity.SplashScreenActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.PedometroActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name=".service.StepService" android:process="co.com.prodactive.StepServiceProcess" >
            <!--android:process="co.com.prodactive.StepServiceProcess" -->
            <intent-filter>
                <action android:name="co.com.zeitgeist.prodactive.MESSAGE_TO_STEPSERVICE"></action>
                <action android:name="co.com.zeitgeist.prodactive.INIT_PRODACTIVE"></action>
            </intent-filter>
        </service>

        <service android:name=".activity.PedometroActivity$ComunicationStepService" android:enabled="true">
        </service>




    </application>

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

</manifest>
